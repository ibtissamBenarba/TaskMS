{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 400px; border-radius: 10px; background-color: rgba(255, 255, 255, 0.95);">
        <h1 class="text-center mb-4" style="color: #4e4e77;">Create Account</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.username, null, {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #4e4e77;'}}) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'style': 'border-radius: 5px;'}}) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #4e4e77;'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'border-radius: 5px;'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password, null, {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #4e4e77;'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'style': 'border-radius: 5px;'}}) }}
            {{ form_errors(form.password) }}
        </div>

        <button type="submit" class="btn w-100 mt-3" style="background: linear-gradient(90deg, #6c81a0, #94a3c4); border: none; border-radius: 5px; color: white; font-weight: bold;">
            Sign Up
        </button>
        {{ form_end(form) }}

        <p class="text-center mt-3" style="color: #4e4e77;">
            Already have an account? <a href="{{ path('user_login') }}" style="color: #6c81a0; text-decoration: none;">Log in here</a>.
        </p>
    </div>
</div>
{% endblock %}
