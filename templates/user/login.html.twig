{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 400px; border-radius: 10px; background-color: rgba(255, 255, 255, 0.95);">
        <h1 class="text-center mb-4" style="color: #4e4e77;">Log In</h1>

        <form method="POST">
            <div class="form-group">
                <label for="username" class="form-label" style="font-weight: bold; color: #4e4e77;">Username</label>
                <input type="text" name="username" id="username" class="form-control" style="border-radius: 5px;" placeholder="Username" required>
            </div>

            <div class="form-group">
                <label for="password" class="form-label" style="font-weight: bold; color: #4e4e77;">Password</label>
                <input type="password" name="password" id="password" class="form-control" style="border-radius: 5px;" placeholder="Password" required>
            </div>

            <button type="submit" class="btn w-100 mt-3" style="background: linear-gradient(90deg, #6c81a0, #94a3c4); border: none; border-radius: 5px; color: white; font-weight: bold;">
                Log In
            </button>
        </form>

        <p class="text-center mt-3" style="color: #4e4e77;">
            Don't have an account? <a href="{{ path('user_signup') }}" style="color: #6c81a0; text-decoration: none;">Sign up here</a>.
        </p>
    </div>
</div>
{% endblock %}
